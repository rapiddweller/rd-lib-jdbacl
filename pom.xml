        <_rd_contiperf_version>2.6.0-jdk-11</_rd_contiperf_version>
        <_rd_format_version>1.1.6-jdk-11-SNAPSHOT</_rd_format_version>
        <_rd_script_version>1.1.4-jdk-11</_rd_script_version>
